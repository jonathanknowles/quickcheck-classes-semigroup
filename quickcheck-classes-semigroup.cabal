cabal-version:  3.0
name:           quickcheck-classes-semigroup
version:        0.0.0
bug-reports:    https://github.com/jonathanknowles/quickcheck-classes-semigroup/issues
license:        Apache-2.0
license-file:   LICENSE
author:         Jonathan Knowles
maintainer:     mail@jonathanknowles.net
copyright:      2022 Jonathan Knowles
category:       Testing
synopsis:       Support for testing Semigroup subclass instances with QuickCheck
description:

    This library provides:

    * Support for testing 'Semigroup' subclass instances with QuickCheck.
    * Reusable properties in the form of 'Laws' definitions.

extra-source-files:
    README.md

common common-extensions
    default-extensions:
        DerivingStrategies
        FlexibleContexts
        FlexibleInstances
        GeneralizedNewtypeDeriving
        LambdaCase
        PolyKinds
        ScopedTypeVariables
        TypeApplications
        ViewPatterns

source-repository head
    type: git
    location: https://github.com/jonathanknowles/quickcheck-classes-semigroup

library
    import:
        common-extensions
    hs-source-dirs:
        src/quickcheck-classes-semigroup
    exposed-modules:
        Test.QuickCheck.Classes.Semigroup
    default-language:
        Haskell2010
    build-depends:
        base >=4.7 && <5
      , groups
      , monoid-subclasses
      , QuickCheck
      , quickcheck-classes
      , quickcheck-classes-semigroup-internal

library quickcheck-classes-semigroup-internal
    import:
        common-extensions
    hs-source-dirs:
        src/quickcheck-classes-semigroup-internal
    exposed-modules:
        Data.Semigroup.Eq
        Test.QuickCheck.Classes.Semigroup.Tuple
    default-language:
        Haskell2010
    build-depends:
        base >=4.7 && <5
      , QuickCheck
      , pretty-show
      , semigroupoids
      , tagged

library quickcheck-classes-semigroup-prelude
    import:
        common-extensions
    hs-source-dirs:
        src/quickcheck-classes-semigroup-prelude
    exposed-modules:
        Test.QuickCheck.Classes.Semigroup.Prelude
    default-language:
        Haskell2010
    build-depends:
        base >=4.7 && <5
      , containers
      , groups
      , monoid-subclasses
      , QuickCheck
      , quickcheck-classes-semigroup
      , quickcheck-classes-semigroup-internal
      , quickcheck-instances

test-suite quickcheck-classes-semigroup-test
    import:
        common-extensions
    main-is:
        Spec.hs
    hs-source-dirs:
        src/quickcheck-classes-semigroup-test
    other-modules:
        Test.QuickCheck.Classes.Hspec
        Test.QuickCheck.Classes.SemigroupSpec
    type: exitcode-stdio-1.0
    default-language:
        Haskell2010
    build-tool-depends:
        hspec-discover:hspec-discover ==2.*
    build-depends:
        base >=4.7 && <5
      , bytestring
      , containers
      , groups
      , hspec
      , monoid-subclasses
      , QuickCheck
      , quickcheck-classes
      , quickcheck-classes-semigroup
      , quickcheck-instances
      , text
